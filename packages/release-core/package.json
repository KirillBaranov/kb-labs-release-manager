    "simple-git": "^3.25.0",
    "yaml": "^2.5.1"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^24.7.0",
